<%= form_with(model: phone, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :state_id, "Estado*"%>
    <%= form.select(:state_id, options_for_select(State.all.pluck(:name, :id), phone.state_id), {include_blank: true}, {class: "form-select", required: true}) %>
  </div>

  <div class="form-group">
    <%= form.label :number, "Número telefónico*" %>
    <%= form.text_field :number, class: "form-control", required: true %>
  </div>

  <%= form.submit class: "btn btn-primary mt-3" %>
<% end %>