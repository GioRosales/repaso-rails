<%= form_with(model: semaphore, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :state_id, "Estado*"%>
    <%= f.select :state_id, options_for_select(State.all.pluck(:name, :id), semaphore.state_id), {include_blank: true}, {class: "form-control", required: true}%>
  </div>
  <div class="form-group">
    <%= f.label :color, "Color del semáforo*" %>
    <%= f.select :color, options_for_select(Semaphore.colors.map{|s| [s.first.capitalize, s.first]}, semaphore.color), {include_blank: true}, {class: "form-control", required: true} %>
  </div>
  <div class="form-group">
    <%= f.label :start, "Fecha de inicio*" %>
    <%= f.date_field :start, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :end, "Fecha de finalización" %>
    <%= f.date_field :end, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary mt-3" %>
<% end %>